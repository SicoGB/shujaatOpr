@model List<opr.Models.Group>
@{ 
    ViewBag.Title = "Index";
    
}
<div class="row row">
    <div class="head col-lg-12 table-bordered" style="background-color:chartreuse">
    <h2>List Of Groups</h2>
        </div>
</div>
<table class="table table-striped table-bordered ">

    <th>ID</th>
    <th>Group Name</th>
    <th>Short_Code</th>
    <th>User_ID</th>
    <th>Entry_Date</th>
    <th>Modified_By</th>
    <th>Modified_Date</th>
    <th>Is Deleted</th>
    <th> Description</th>
    <th>Action</th>

    @foreach (var mol in Model)
    {
    <tr>
        <td>@mol.Id</td>
        <td>@mol.Group_Name</td>
        <td>@mol.Short_Code</td>
        <td>@mol.User_Id</td>
        <td>@mol.Entry_Date</td>

        <td>@mol.Modified_By</td>
        <td>@mol.Modified_Date</td>
        <td>@mol.IsDeleted</td>


        <td>@mol.Description</td>
        <td>
            @Html.ActionLink("Edit", "EditGroup", new { id = mol.Id })|

            @Html.ActionLink("Delete", "DeleteGroup", new { id = mol.Id })|
        </td>
    </tr>
    }
</table>


<div class="btn  btn-default">
    @Html.ActionLink("Add New Group", "AddGroup")
</div>


